{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mortum.local/schemas/map.lighting.schema.json",
  "title": "Mortum Map Lighting Extension (v1)",
  "description": "Adds sector light tint and optional point lights to the base map format.",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "sectors": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "light_color": {
            "description": "RGB tint multiplier applied to shaded surfaces in this sector.",
            "type": "object",
            "additionalProperties": false,
            "required": ["r", "g", "b"],
            "properties": {
              "r": {"type": "number", "minimum": 0, "maximum": 1},
              "g": {"type": "number", "minimum": 0, "maximum": 1},
              "b": {"type": "number", "minimum": 0, "maximum": 1}
            }
          }
        }
      }
    },
    "lights": {
      "description": "Optional point lights used to fake local light sources.",
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["x", "y", "radius", "intensity"],
        "properties": {
          "x": {"type": "number"},
          "y": {"type": "number"},
          "z": {"type": "number"},
          "radius": {"type": "number", "exclusiveMinimum": 0},
          "intensity": {"type": "number", "minimum": 0},
          "color": {
            "type": "object",
            "additionalProperties": false,
            "required": ["r", "g", "b"],
            "properties": {
              "r": {"type": "number", "minimum": 0, "maximum": 1},
              "g": {"type": "number", "minimum": 0, "maximum": 1},
              "b": {"type": "number", "minimum": 0, "maximum": 1}
            }
          }
        }
      }
    }
  }
}
