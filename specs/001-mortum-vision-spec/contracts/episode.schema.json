{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mortum.local/schemas/episode.schema.json",
  "title": "Mortum Episode",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "splash", "maps"],
  "properties": {
    "name": {"type": "string", "minLength": 1},
    "splash": {"type": "string", "minLength": 1},
    "maps": {
      "type": "array",
      "minItems": 1,
      "items": {"type": "string", "minLength": 1}
    }
  }
}
