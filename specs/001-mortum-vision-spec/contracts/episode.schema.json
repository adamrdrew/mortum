{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mortum.local/schemas/episode.schema.json",
  "title": "Mortum Episode",
  "type": "object",
  "additionalProperties": true,
  "required": ["name", "splash"],
  "properties": {
    "name": {"type": "string", "minLength": 1},
    "splash": {"type": "string", "minLength": 1},
    "maps": {
      "type": "array",
      "items": {"type": "string", "minLength": 1}
    },
    "scenes": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "enter": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "pattern": "^(?![\\\\/])(?!.*\\.\\.)(?!.*\\\\\\\\)[A-Za-z0-9_./-]+$"
          }
        },
        "exit": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "pattern": "^(?![\\\\/])(?!.*\\.\\.)(?!.*\\\\\\\\)[A-Za-z0-9_./-]+$"
          }
        }
      }
    }
  }
}
