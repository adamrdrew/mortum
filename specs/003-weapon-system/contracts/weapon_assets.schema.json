{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mortum.local/schemas/weapon_assets.schema.json",
  "title": "Mortum Weapon Asset Manifest (optional)",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "weapons"],
  "properties": {
    "version": {"type": "integer", "const": 1},
    "weapons": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "dir", "weapon_prefix", "icon", "pickup", "idle", "shoot"],
        "properties": {
          "id": {"type": "string", "minLength": 1},
          "dir": {"type": "string", "minLength": 1},
          "weapon_prefix": {"type": "string", "minLength": 1},
          "icon": {"type": "string", "pattern": "-ICON\\.png$"},
          "pickup": {"type": "string", "pattern": "-PICKUP\\.png$"},
          "idle": {"type": "string", "pattern": "-IDLE\\.png$"},
          "shoot": {
            "type": "array",
            "minItems": 6,
            "maxItems": 6,
            "items": {"type": "string", "pattern": "-SHOOT-[1-6]\\.png$"}
          }
        }
      }
    }
  }
}
